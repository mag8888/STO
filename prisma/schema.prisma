generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ServiceStation {
  id        Int      @id @default(autoincrement())
  chatId    BigInt   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Batches   OrderBatch[]
}

/// Зарегистрированный оператор (добавляется супер-админом)
model Operator {
  id               Int        @id @default(autoincrement())
  telegramId       BigInt     @unique
  telegramUsername String?
  nickname         String     // Псевдоним/имя оператора
  addedBy          BigInt     // chatId суперадмина, который добавил
  createdAt        DateTime   @default(now())
  Batches          OrderBatch[]

  @@map("operators")
}

model OrderBatch {
  id               Int      @id @default(autoincrement())
  serviceStationId Int
  serviceStation   ServiceStation @relation(fields: [serviceStationId], references: [id])
  operatorId       Int?
  operator         Operator? @relation(fields: [operatorId], references: [id])
  weekStartDate    DateTime
  status           String   @default("PROCESSING") // PROCESSING, NEEDS_REVIEW, APPROVED
  rawFiles         String   // JSON string of file paths
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  Items            OrderItem[]
}

model OrderItem {
  id           Int      @id @default(autoincrement())
  batchId      Int
  batch        OrderBatch @relation(fields: [batchId], references: [id])
  vin          String?
  mileage      Int?
  workName     String
  quantity     Float
  price        Float
  total        Float
  isApproved   Boolean  @default(false)
  validationError String? 
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
